{
  "name": "buttergolf",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:mobile:ios": "pnpm --filter mobile run ios",
    "dev:mobile:android": "pnpm --filter mobile run android",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "upload:images": "tsx scripts/upload-sample-images.ts",
    "test": "turbo run test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "check-deps": "check-dependency-version-consistency .",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean-install": "pnpm clean && pnpm install",
    "lighthouse": "node scripts/lighthouse.js"
  },
  "devDependencies": {
    "@tamagui/cli": "catalog:",
    "@testing-library/react-native": "^13.3.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.13",
    "check-dependency-version-consistency": "^5.0.1",
    "dotenv": "^17.2.3",
    "prettier": "^3.6.2",
    "tsx": "catalog:",
    "turbo": "^2.7.2",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-test-renderer": "19.1.0",
      "react-is": "19.1.0",
      "@types/react": "19.1.0",
      "@types/react-dom": "19.1.0",
      "jsdom": "false",
      "webidl-conversions": "5.0.0"
    },
    "ignoredBuiltDependencies": [
      "@clerk/shared",
      "@parcel/watcher"
    ]
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/react": "catalog:"
  }
}
