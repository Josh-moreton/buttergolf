{
  "name": "buttergolf",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:mobile:ios": "pnpm --filter mobile run ios",
    "dev:mobile:android": "pnpm --filter mobile run android",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "upload:images": "tsx scripts/upload-sample-images.ts",
    "test": "turbo run test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean-install": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@tamagui/cli": "^1.135.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-native": "^13.3.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.13",
    "check-dependency-version-consistency": "^5.0.1",
    "dotenv": "^17.2.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.6.0",
    "typescript": "catalog:",
    "vitest": "^4.0.13"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18"
  }
}
