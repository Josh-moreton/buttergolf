{
  "name": "@buttergolf/ui",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --fix --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit && tsc --noEmit -p tsconfig.test.json"
  },
  "dependencies": {
    "@buttergolf/config": "workspace:*"
  },
  "devDependencies": {
    "@buttergolf/eslint-config": "workspace:*",
    "@buttergolf/typescript-config": "workspace:*",
    "@tamagui/card": "catalog:",
    "@tamagui/config": "catalog:",
    "@tamagui/lucide-icons": "catalog:",
    "@tamagui/polyfill-dev": "catalog:",
    "@tamagui/shorthands": "catalog:",
    "@tamagui/themes": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "tamagui": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@tamagui/card": "^1.135.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.75.0",
    "tamagui": "^1.135.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
}
