{
  "name": "@buttergolf/ui",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --fix --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit && tsc --noEmit -p tsconfig.test.json"
  },
  "dependencies": {
    "@buttergolf/config": "workspace:*"
  },
  "devDependencies": {
    "@buttergolf/eslint-config": "workspace:*",
    "@buttergolf/typescript-config": "workspace:*",
    "@tamagui/card": "catalog:",
    "@tamagui/config": "catalog:",
    "@tamagui/lucide-icons": "catalog:",
    "@tamagui/polyfill-dev": "catalog:",
    "@tamagui/shorthands": "catalog:",
    "@tamagui/themes": "catalog:",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "jsdom": "^27.2.0",
    "tamagui": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.13"
  },
  "peerDependencies": {
    "@tamagui/card": "*",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "tamagui": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
}
