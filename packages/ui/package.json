{
  "name": "@buttergolf/ui",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "lint": "eslint . --fix --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@buttergolf/config": "workspace:*",
    "@tamagui/card": "catalog:",
    "@tamagui/sheet": "catalog:",
    "@tamagui/toast": "catalog:",
    "tamagui": "catalog:"
  },
  "devDependencies": {
    "@buttergolf/eslint-config": "workspace:*",
    "@buttergolf/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
