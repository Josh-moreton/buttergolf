{
  "version": "1.0",
  "name": "ButterGolf",
  "description": "Root configuration for ButterGolf monorepo",
  "context": {
    "directories": [
      "apps/web",
      "apps/mobile",
      "packages/ui",
      "packages/db",
      "packages/app",
      "packages/config",
      "packages/constants",
      "packages/assets"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.next/**",
      "**/.expo/**",
      "**/dist/**",
      "**/build/**",
      "**/.turbo/**",
      "**/coverage/**",
      "**/*.log"
    ]
  },
  "rules": {
    "codeStyle": {
      "typescript": {
        "strict": true,
        "noImplicitAny": true,
        "quotes": "double",
        "semi": true,
        "trailingComma": "es5"
      },
      "react": {
        "hooks": true,
        "functionComponents": true,
        "namedExports": true
      }
    },
    "naming": {
      "components": "PascalCase",
      "files": "kebab-case",
      "hooks": "camelCase with use prefix",
      "types": "PascalCase",
      "interfaces": "PascalCase with I prefix"
    },
    "imports": {
      "internalPackages": "@buttergolf/*",
      "preferNamedImports": true,
      "sortImports": true
    }
  },
  "tools": {
    "packageManager": "pnpm",
    "buildSystem": "turbo",
    "formatter": "prettier",
    "linter": "eslint"
  },
  "commands": {
    "dev": "pnpm dev",
    "build": "pnpm build",
    "test": "pnpm test",
    "lint": "pnpm lint",
    "format": "pnpm format",
    "typecheck": "pnpm check-types"
  }
}
