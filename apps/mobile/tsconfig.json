{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@buttergolf/ui": [
        "../../packages/ui/src"
      ],
      "@buttergolf/app": [
        "../../packages/app/src"
      ],
      "@buttergolf/db": [
        "../../packages/db/src"
      ],
      "tamagui.config": [
        "../../packages/ui/tamagui.config.ts"
      ],
      "@my-scope/*": [
        "../../packages/*/src"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types.d.ts",
    "../../tamagui.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}