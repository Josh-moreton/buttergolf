{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "paths": {
      "@buttergolf/ui": [
        "../../packages/ui/src"
      ],
      "@buttergolf/*": [
        "../../packages/*/src"
      ]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}